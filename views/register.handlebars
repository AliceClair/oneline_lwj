<head>
    <meta charset="UTF-8">
    <!--移动设备优先，自适应窗口-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>一行管理系统</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css" >
</head>

<body ng-app="myApp">
<div style="margin-top: 50px;">
    <form ng-controller="ctrl" action="register" name="myForm" class="container form-horizontal" method="post">
        <p class="container" style="width: 300px;">{{{message}}}</p>
        <div class="form-group" ng-class="{'has-error':myForm.username.$dirty && myForm.username.$invalid}">
            <label class="col-sm-3 control-label">用户名</label>
            <div class="col-sm-5">
                <input type="text" name="username" ng-pattern="/^[a-zA-Z]{1}/" ng-minlength="5" ng-maxlength="10" ng-required="true" ng-model="data.username" class="form-control" id="userName" placeholder="请输入5~10位以英文字母开始的用户名">
                <div ng-show="myForm.username.$dirty && myForm.username.$error.maxlength" class="alert alert-warning help-block">
                    用户名长度不能超过10位
                </div>
                <div ng-show="myForm.username.$dirty && myForm.username.$error.minlength" class="alert alert-danger help-block">
                    用户名长度不能小于5位
                </div>
                <div ng-show="myForm.username.$dirty && myForm.username.$error.pattern" class="alert alert-info help-block">
                    用户名必须以英文字母开始
                </div>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error':myForm.password.$dirty && myForm.password.$invalid}">
            <label class="col-sm-3 control-label">密 码</label>
            <div class="col-sm-5">
                <input type="password" name="password" ng-minlength="6" ng-maxlength="15" ng-required="true" ng-model="data.password" class="form-control" placeholder="请输入长度为5~10位的密码">
                <div ng-show="myForm.password.$dirty && myForm.password.$error.minlength" class="alert alert-danger help-block">
                    密码长度不能小于6位
                </div>
                <div ng-show="myForm.password.$dirty && myForm.password.$error.maxlength" class="alert alert-warning help-block">
                    密码长度不能超过15位
                </div>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error':myForm.passwordConfirm.$dirty && myForm.passwordConfirm.$invalid}">
            <label class="col-sm-3 control-label">确认密码</label>
            <div class="col-sm-5">
                <input type="password" name="passwordConfirm" ng-required="true" ng-model="data.passwordConfirm" class="form-control" placeholder="请再次确认密码">
                <div ng-show="myForm.passwordConfirm.$dirty && myForm.passwordConfirm.$dirty && data.password !== data.passwordConfirm" class="alert alert-danger help-block">
                    两次密码输入不一致
                </div>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error':myForm.qq.$dirty && myForm.qq.$invalid}">
            <label class="col-sm-3 control-label">Q Q</label>
            <div class="col-sm-5">
                <input type="number" name="qq" ng-minlength="5" ng-maxlength="15" ng-required="true" ng-model="data.qq" class="form-control" placeholder="请输入您的QQ号">
                <div ng-show="myForm.qq.$dirty && myForm.qq.$error.minlength" class="alert alert-warning help-block">
                    QQ长度不能小于5位
                </div>
                <div ng-show="myForm.qq.$dirty && myForm.qq.$error.maxlength" class="alert alert-warning help-block">
                    QQ长度不能超过15位
                </div>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error':myForm.email.$dirty && myForm.email.$invalid}">
            <label class="col-sm-3 control-label">邮 箱</label>
            <div class="col-sm-5">
                <input type="email" name="email" ng-minlength="10" ng-maxlength="30" ng-required="true" ng-model="data.email" class="form-control" placeholder="邮箱"><span></span>
                <!--<div ng-show="myForm.email.$dirty && myForm.email.$error.minlength" class="popover right help-block">-->
                    <!--<div class="arrow"> ::after</div>-->
                    <!--<h3 class="popover-title"> 注意：</h3>-->
                    <!--<div class="popover-content"><p>邮箱长度不能小于10位</p></div>-->
                <!--</div>-->
                <div ng-show="myForm.email.$dirty && myForm.email.$error.minlength" class="alert alert-warning help-block">
                    邮箱长度不能少于10位
                </div>
                <div ng-show="myForm.email.$dirty && myForm.email.$error.maxlength" class="alert alert-warning help-block">
                    邮箱长度不能超过30位
                </div>
                <div ng-show="myForm.email.$dirty && myForm.email.$error.email" class="alert alert-warning help-block">
                    邮箱格式不正确
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit " class="btn btn-success" style="margin-top: 45px;margin-left: 80px;" ng-disabled="myForm.$invalid === 0">注册</button>
                <button type="reset" class="btn btn-success" style="margin-top: 45px;margin-left: 90px;" ng-click="reset()">重置</button>
            </div>
        </div>
    </form>
</div>
